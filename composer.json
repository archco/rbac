{
    "name": "cosmos/rbac",
    "description": "A trait for using Role-based access control in the User that a Laravel eloquent model.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "archco",
            "email": "archcoster@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "illuminate/auth": "^6.0",
        "illuminate/container": "^6.0",
        "illuminate/contracts": "^6.0",
        "illuminate/database": "^6.0",
        "chelout/laravel-relationship-events": "^1.1"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Cosmos\\Rbac\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cosmos\\Rbac\\Test\\": "test"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cosmos\\Rbac\\RbacServiceProvider"
            ]
        }
    }
}
